<header>
    <div class="container">
        <div class="row">
            <div class="six columns">
                <span class="icon-menu2 menu" id="sandwich"></span>
            </div>
            <div class="six columns right">
                <span id="weather"><span class="light">Low</span> · <b>{{weather.low}} F </b></span>
                <span class="light">High</span> · <b>{{weather.high}} F </b></a></span>
                <span class="light">Weather</span> · <b>{{weather.text}}</b></a></span>
                <span id="day">{{date}}</span>
            </div>
        </div>
    </div>
</header>
<div class="container">
            <div class="row" id="features">
                <div class="four columns feature" data-feature="search">
                    <div class="list-heading">Messages</div>
                    <div class="list-group">
                        {{#each message}}
                        <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                          <div class="d-flex w-100 justify-content-between">
                            <h4 class="mb-1">{{ this.[0] }}</h4>
                            <h5>From: {{this.[2]}} @ {{this.[3]}}</h5>
                            <small class="text-muted">{{ this.[1] }}</small>
                          </div>
                        </a>
                      {{else}}
                      <div class="alert alert-danger" role="alert">
                    No new Emails!
                    </div>
                      {{/each}}
                    </div>
                    </ul>
                </div>
                <div class="four columns feature" data-feature="fill">
                  <p> </p>
                </div>
                <div class="four columns feature" data-feature="news">
                  <div class="list-heading">News</div><span class="light" id="news-source"> via {{source}}</span>
                    <ul id="news">
                        {{#each articles}}
                        <li><a href={{this.[1]}}>{{this.[0]}}</a></li>
                        {{else}}
                        <div class="alert alert-danger" role="alert">
                      No RSS Updates!
                      </div>
                        {{/each}}
                    </ul>
                    <div class="list-heading">Calendar</div>
                    <ul class="list-group">
                      {{#each events}}
                        <li class="list-group-item"><h3>{{this.[1]}}</h3>
                          <h5>@{{this.[0]}}</h5></li>
                          {{else}}
                          <div class="alert alert-danger" role="alert">
                        No Upcoming Events!
                        </div>
                        {{/each}}
                      </ul>
                    <ul id="todos">
                    </ul>
                </div>
            </div>
        </div>

</div>
<script src="http://localhost:3000/js/email.js"></script>
